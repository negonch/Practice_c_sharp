@model IEnumerable<isrpo_practice.Student>

@{
    ViewBag.Title = "Список студентов";
}

<h2>Студент</h2>

<p>
    @if (User.IsInRole(isrpo_practice.Controllers.AccountController.RoleAdmin))
    {
        @Html.ActionLink("Добавить", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            Фамилия
        </th>
        <th>
            Имя
        </th>
        <th>
            Отчество
        </th>
        <th>
            Адрес
        </th>
        <th>
            № пропуска
        </th>
        <th>
            № договора
        </th>
        <th>
            № комнаты
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Family)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Othestvo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Badge.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contract.Id_contract)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Room.Id_room)
        </td>
        <td>
            @Html.ActionLink("Подробнее", "Details", new { id = item.ID_Student })
            @if (User.IsInRole(isrpo_practice.Controllers.AccountController.RoleAdmin))
            {
                @Html.Raw(" | ")
                @Html.ActionLink("Изменить", "Edit", new { id = item.ID_Student })
                @Html.Raw(" | ")
                @Html.ActionLink("Удалить", "Delete", new { id = item.ID_Student })
            }
        </td>
    </tr>
}

</table>
